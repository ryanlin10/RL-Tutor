# =============================================================================
# RL AI Tutor - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# For Railway: Add these in the Variables tab of your service
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED - You must set these
# -----------------------------------------------------------------------------

# Groq API Key (get from https://console.groq.com/keys)
GROQ_API_KEY=gsk_your_groq_api_key_here

# -----------------------------------------------------------------------------
# DATABASE - Railway auto-provides this if you add PostgreSQL service
# -----------------------------------------------------------------------------

# PostgreSQL connection string
# Railway format: postgresql://user:password@host:port/database
# Leave unset on Railway - it auto-injects DATABASE_URL when you add Postgres
DATABASE_URL=postgresql://user:password@localhost:5432/rl_tutor

# -----------------------------------------------------------------------------
# OPTIONAL - These have sensible defaults
# -----------------------------------------------------------------------------

# Flask secret key for session security (generate a random string for production)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-a-random-secret-key

# Flask debug mode (set to False in production)
FLASK_DEBUG=False

# Groq model to use (default: deepseek-r1-distill-llama-70b)
# Options: deepseek-r1-distill-llama-70b, llama-3.3-70b-versatile, mixtral-8x7b-32768
GROQ_MODEL=deepseek-r1-distill-llama-70b

# Redis URL for rate limiting (optional - uses in-memory if not set)
# Add Redis service on Railway and it will auto-inject REDIS_URL
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# RAG Configuration - Usually don't need to change
# -----------------------------------------------------------------------------

# Chunk size for splitting lecture notes (characters)
RAG_CHUNK_SIZE=1000

# Overlap between chunks (characters)
RAG_CHUNK_OVERLAP=200

# Path to vector store database
VECTOR_DB_PATH=./data/vector_store

# Path to lecture notes directory
LECTURE_NOTES_PATH=./data/lecture_notes
